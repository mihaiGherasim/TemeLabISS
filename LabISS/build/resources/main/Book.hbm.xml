<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "model.Book" table="carti">
        <id name="isbn" column="isbn">
            <generator class="increment"></generator>
        </id>
        <property name="titlu" type="java.lang.String" column="titlu"/>
        <property name="autor" type="java.lang.String" column="autor"/>
        <property name="nrExemplare" type="java.lang.Integer" column="nr_exemplare"/>
    </class>
</hibernate-mapping>
